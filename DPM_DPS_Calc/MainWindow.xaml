<Window x:Class="DPM_DPS_Calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPM_DPS_Calc"
        mc:Ignorable="d"
        Title="DPM &amp; DPS" Height="181" Width="248" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Label x:Name="label" Content="Урон:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Damage_textBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Margin="75,13,0,0"/>
        <Label x:Name="label_Copy" Content="Кулдаун:" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Cooldown_textBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Margin="75,41,0,0"/>
        <Button x:Name="Calculate_button" Content="Посчитать" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" Width="215" Height="27" Click="Calculate_button_Click"/>
        <Label x:Name="Result_label" Content="" HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top" Width="215" Height="47" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
